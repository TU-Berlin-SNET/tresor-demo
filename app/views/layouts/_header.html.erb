<div id="header" class="span-24">
  <div class="span-24">
    <div id="locale">
      <% if I18n.locale == I18n.default_locale %>
          <%= link_to "English", :locale => 'en' %>
      <% else %>
          <%= link_to "Deutsch", :locale => 'de' %>
      <% end %>
    </div>
    <% if user_signed_in? && current_user.roles?(:verwalter) %>
        <%= link_to logo_pills, root_path %>
    <% else %>
        <%= link_to logo, root_path %>
    <% end %>

    <h2>TRESOR Demonstrator</h2>

    <h3><span>Trusted Ecosystem for Standardized and Open cloud-based Resources</span></h3>
  </div>
  <%= render 'layouts/navigation' %>
</div>